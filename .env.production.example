# Tiquemax POS System - Production Environment Variables
# Copy this file to .env.production and fill in your values

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
DEBUG=False
ENVIRONMENT=production

# Generate a secure secret key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com,www.your-domain.com

# CSRF Trusted Origins (include https:// prefix)
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=tiquemax_pos
DB_USER=tiquemax
DB_PASSWORD=change-this-secure-password
DB_HOST=db
DB_PORT=5432

# =============================================================================
# REDIS SETTINGS
# =============================================================================
# Generate secure password with: openssl rand -base64 32
REDIS_PASSWORD=change-this-redis-password

REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_CACHE_URL=redis://:${REDIS_PASSWORD}@redis:6379/1
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/2
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/3

# =============================================================================
# EMAIL SETTINGS
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com
SERVER_EMAIL=server@your-domain.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable these in production with HTTPS
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEFAULT_CURRENCY=USD
DEFAULT_LANGUAGE=es
TIME_ZONE=America/Caracas
LANGUAGE_CODE=es

# Site information
SITE_NAME=Tiquemax POS
SITE_URL=https://your-domain.com

# =============================================================================
# STORAGE SETTINGS (Optional - for cloud storage)
# =============================================================================
# AWS S3 (uncomment if using)
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-cdn-domain.com

# =============================================================================
# MONITORING & LOGGING (Optional)
# =============================================================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# CELERY SETTINGS
# =============================================================================
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=False

# =============================================================================
# FLOWER (Celery Monitoring)
# =============================================================================
FLOWER_USER=admin
FLOWER_PASSWORD=change-this-flower-password
FLOWER_PORT=5555

# =============================================================================
# NGINX/WEB SERVER SETTINGS
# =============================================================================
HTTP_PORT=80
HTTPS_PORT=443
WEB_PORT=8000

# =============================================================================
# PAYMENT GATEWAYS (Configure as needed)
# =============================================================================
# Stripe
# STRIPE_PUBLIC_KEY=pk_live_xxx
# STRIPE_SECRET_KEY=sk_live_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx

# PayPal
# PAYPAL_CLIENT_ID=your-client-id
# PAYPAL_CLIENT_SECRET=your-client-secret
# PAYPAL_MODE=live

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_PROMETHEUS=False
ENABLE_DEBUG_TOOLBAR=False
ENABLE_SILK=False

# =============================================================================
# RATE LIMITING
# =============================================================================
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=default

# =============================================================================
# SESSION SETTINGS
# =============================================================================
SESSION_COOKIE_AGE=86400  # 24 hours in seconds
SESSION_SAVE_EVERY_REQUEST=False
SESSION_COOKIE_HTTPONLY=True

# =============================================================================
# CORS SETTINGS (if exposing API to external domains)
# =============================================================================
# CORS_ALLOWED_ORIGINS=https://app.your-domain.com,https://mobile.your-domain.com
# CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# ADMIN SETTINGS
# =============================================================================
ADMIN_URL=admin/  # Change this to something obscure for security
ADMINS=Admin Name,admin@your-domain.com

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
